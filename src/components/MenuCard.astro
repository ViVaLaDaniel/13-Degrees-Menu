---
import type { Dish } from "../data/dishes";

interface Props {
  id: string;
  dish: Dish;
  [key: string]: any; // Allow other props like style
}

const { id, dish, ...rest } = Astro.props;
---

<article class="menu-card reveal" data-dish={id} data-category={dish.category} {...rest}>
  <div class="card-img-wrapper">
    <img src={dish.img} alt={dish.title} loading="lazy" decoding="async" />
    <div class="card-overlay">
      <span data-i18n="view_details">VIEW DETAILS</span>
    </div>
  </div>
</article>
<div class="card-content">
  <h3 class="js-dish-title">{dish.title}</h3>
  <p class="description js-dish-desc">{dish.description}</p>
  <div class="pairing">
    <strong data-i18n="wine_pairing">Wine Pairing:</strong>
    <span class="js-dish-pairing">{dish.winePairing}</span>
  </div>
</div>
